/* 导航区 */

.nav {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  width: 96%;
  margin: 0 auto;
  margin-top: 15rpx;
}

.conlumn {
  display: flex;
  flex-basis: 100%;
  height: 240rpx;
  justify-content: space-around;
  margin-top: 20rpx;
}

.conlumn .nav-pic {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-radius: 10%;
}

.conlumn .nav-pic .icon-wrap {
  position: absolute;
  left: 20%;
  top: 20%;
  text-align: center;
}

.conlumn .nav-pic .icon-wrap image {
  width: 60rpx;
  height: 60rpx;
}

.conlumn .nav-pic .icon-wrap view {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 10rpx;
}

