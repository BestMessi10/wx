.banner{
  width: 100%;
  height: 150px;
}
.content{
  text-align: center;
}
.content .tittle{
  font-size:30rpx;
  border-bottom: 4rpx solid #2F7FF8;
  margin-left: 20rpx;
  line-height: 80rpx;
  padding-bottom: 10rpx;
  letter-spacing: 4rpx;
  color: #2F7FF8;

  
  
}
.conbg{
  width: 100%;
  height: 273px;
  background: url("https://api.wboyuan.com/static/images/booking/book-bg.png") no-repeat;
  background-size: 100% 100%;
}

.bookForm{
  display: flex;
  font-size: 24rpx;
  flex-direction: column;
  align-items: center;
  color: #fff;
  margin-top:-18rpx;
}
.bookForm .col{
  display: flex;
  flex-direction: row;
  
  height: 40px;
  width: 300px;
  overflow: hidden;
}
.col{
  width: 56px;
  height: 14px;
  line-height: 40px;
  border-bottom: 1px solid #fff;
}
.col .one{
  margin-right: 10px;width: 30rpx;height: 30rpx;/*margin-top: 9px; wxcs_style_wxcs_style_margin-top: 19rpx*/line-height: 30rpx;text-align: center;/*margin-bottom: -14px; wxcs_style_wxcs_style_margin-bottom: -27rpx*/margin-top: ;/*position: absoult*/left: 0;bottom: 28px;margin-top: 10px;
}
.col .icon{
  width: 30rpx;
  height: 30rpx;
  line-height: 40px;
  display: inline-block;
  margin-top:10px;  
}
.col .tt{
  width: 70px;
  line-height: 54px;
}



.bookForm input{
  border: 1px none #F3F3F3;
  margin-top: 26rpx;
  height: 50rpx;
  text-align: left;
  padding-left: 20rpx;
  color:#888888;
}



.bookForm .subBtn{
  width: 600rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx; 
  background: #0078D7;
  border-radius: 14px;
  color: #fff;
  margin-top: 40rpx;
}
.company{
  display: flex;
  font-size: 24rpx;
  flex-direction: column;
  margin-left: 20rpx;
  color: #808080;
  margin-right: 24rpx;
}
.company .c1{
 margin-top:40rpx;
 font-size: 26rpx;
 color: #111;
}
.company .address{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
.company .address .a2{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.company .address .d1{
  margin-top: 16rpx;
  color: #111;
  line-height: 44rpx;
}
.company .address .d2{
  width: 44rpx;
  height: 44rpx;
  line-height:44rpx;
  margin-top:20rpx;
}
.box{
  display: flex;
  flex-direction: row;

}
.box .x{
  width: 50%;
  text-align: center;  
}
.box .xx{
  width: 80px;
